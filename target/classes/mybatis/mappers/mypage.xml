	<insert id="refundMyOrder" parameterType="mypageVO">
	<![CDATA[
		insert into t_refund(order_state,
							order_seq_num,
							account_holder,
							account_bank,
							account_number,
							cancel_reason,
							refund_price)
					 values(#{order_state},
						    #{order_seq_num},
						    #{account_holder},
							#{account_bank},
							#{account_number},
							#{cancel_reason},
							#{refund_price})
	]]>   
	</insert>
	
