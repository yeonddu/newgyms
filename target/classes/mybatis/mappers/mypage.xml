	 <select id="selectMyOrderList" resultMap="orderProductResult" parameterType="java.util.Map">
	    <![CDATA[
			select *
			from (
				select ROW_NUMBER() over(order by order_seq_num) AS rowNum,
             		order_seq_num,
        			pay_order_time,
        			product_name,
        			product_id,
         	 		order_state,
         	 		total_price
             	from t_order
              	where member_id=#{member_id}
      				AND if(#{order_state} = '', order_state IN ('결제완료','결제취소','환불완료'),order_state =#{order_state})
	   				AND product_name LIKE CONCAT('%',#{text_box},'%')
	   				AND pay_order_time BETWEEN DATE(#{firstDate}) and DATE(#{secondDate})
             	)a
  			 where rowNum BETWEEN (#{maxnum}-4) - (#{chapter}-1)*5 and (#{maxnum}) - (#{chapter}-1)*5
          order by order_seq_num desc
		]]>
	</select>
	
	<select id="maxNumSelect" resultType="String" parameterType="java.util.Map">
       <![CDATA[
       		SELECT COUNT(*)
       		FROM t_order
       		where member_id=#{member_id}
       			AND if(#{order_state} = '', order_state IN ('결제완료','결제취소','환불완료'),order_state =#{order_state})
	   			AND product_name LIKE CONCAT('%',#{text_box},'%')
	   			AND pay_order_time BETWEEN DATE(#{firstDate}) and DATE(#{secondDate})
      ]]>
	</select>
	
	
